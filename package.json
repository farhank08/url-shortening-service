{
	"name": "url-shortening-service",
	"version": "1.0.0",
	"private": true,
	"description": "URL shortening service",
	"license": "ISC",
	"author": "farhank08",
	"type": "module",
	"workspaces": [
		"client",
		"server"
	],
	"scripts": {
		"dev": "concurrently -n SERVER,SERVER -c blue,green \"npm run dev -w @app/server\" \"npm run dev -w @app/client\"",
		"start": "npm start -w @app/server",
		"build": "npm run build --workspaces",
		"test": "npm run test --workspaces",
		"typecheck": "npm run typecheck --workspaces"
	},
	"devDependencies": {
		"concurrently": "^9.2.1"
	}
}
